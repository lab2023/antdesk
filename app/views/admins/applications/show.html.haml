= title t('tt.show', resource_name: Application.model_name.human)

- content_for :toolbar_left do
  = link_to(admins_dashboard_index_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left

  = link_to(edit_admins_application_path(@application), class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
    %i.icon-pencil

= show_for @application do |s|
  = s.attribute :cname_domain
  = s.attribute :name
  = s.attribute :subdomain
  = s.attribute :logo
  = s.attribute :twitter_username
  = s.attribute :facebook_page
