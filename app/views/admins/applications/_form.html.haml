= simple_form_for([:admins, @application], :defaults => {:input_html => {:class => 'span12', :rows => 3}}) do |f|
  = f.error_notification

  .form-inputs
    = f.input :owner_name, :input_html => {data: {autocomplete_source: auto_admins_contributors_path}}
    = f.input :cname_domain
    = f.input :subdomain
    = f.input :name
    = f.input :logo, :as => :file
    = f.input :twitter_username
    = f.input :facebook_page

  .form-actions
    = f.button :submit
