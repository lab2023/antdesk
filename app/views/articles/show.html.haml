= title @article.name
%ul.breadcrumb
  = '<li>'.html_safe
  = render_breadcrumbs :separator => '<span class="divider">/</span></li><li>'.html_safe
  = '</li>'.html_safe
.row-fluid
  .span3
    %ul.nav.nav-tabs.nav-stacked
      = render @current_application.categories
      %p
      = render :partial => 'partials/social'
  .span9.well
    = markdown(@article.body)
.row-fluid
  .span3
  .span9
    = link_to(:back , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
      %i.icon-arrow-left
      = t('tooltips.back')