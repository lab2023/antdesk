!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title
      Antdesk | #{yield :title || t('tt.dashboard.welcome')}
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield :head
  %body
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => contributors_dashboard_index_path}
            Antdesk
          .nav-collapse

            %ul.nav.pull-right
              - if current_contributor
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    %i.icon-user.icon-white
                    = current_contributor.name
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to t('nav.profile'), edit_contributor_registration_path
                    %li= link_to t('nav.dashboard'), contributors_dashboard_index_path
                    %li= link_to t('nav.signout'), destroy_contributor_session_path, :method => :delete
              - else
                %li= link_to t('nav.signup'), new_contributor_registration_path
                %li= link_to t('nav.signin'), new_contributor_session_path


    - if flash.count > 0
      .container
        .row-fluid
          - flash.each do |name, msg|
            %div{:class => "alert alert-#{name}"}
              %a.close{"data-dismiss" => "alert", :href => "#"} &times;
              = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
    .container
      .wrapper.row-fluid
        .span12.wrap
          .head
            .span4.pull-left
              = yield :toolbar_left
            .span4.title
              %h2= yield :title
            .span4.pull-right
              = yield :toolbar_right
          = yield