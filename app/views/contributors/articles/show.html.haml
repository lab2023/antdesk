= title t('tt.show', resource_name: Article.model_name.human)

- content_for :toolbar_left do
  = link_to(contributors_application_articles_path(@application), class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left
  = link_to(edit_contributors_application_article_path(@application, @article) , class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
    %i.icon-pencil
  = link_to(contributors_application_article_path(@application, @article), class: 'btn', confirm: t('confirm'), method: :delete, rel: 'tooltip', title: t('tooltips.delete')) do
    %i.icon-trash

- @article.body = markdown(@article.body)
= show_for @article do |s|
  = s.attribute :name
  = s.association :categories
  = s.attribute :status do
    = @article.status ? t('published'):t('unpublished')
  = s.attribute :body
