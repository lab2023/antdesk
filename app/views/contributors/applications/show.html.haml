= title t('tt.show', resource_name: Application.model_name.human)

- content_for :toolbar_left do
  = link_to(contributors_dashboard_index_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left
  - if @application.owner_id == current_contributor.id
    = link_to(new_administrator_contributors_application_path(@application) , class: 'btn', rel: 'tooltip', title: t('tooltips.add_to_administrator')) do
      %i.icon-user

- content_for :toolbar_right do
  = link_to(contributors_application_categories_path(@application), class: 'btn', rel: 'tooltip', title: t('categories')) do
    %i.icon-eye-open
    =t('categories')
  = link_to(contributors_application_articles_path(@application), class: 'btn', rel: 'tooltip', title: t('articles')) do
    %i.icon-eye-open
    =t('articles')
  = link_to(contributors_application_videos_path(@application), class: 'btn', rel: 'tooltip', title: t('videos')) do
    %i.icon-eye-open
    =t('videos')

= show_for @application do |s|
  = s.attribute :cname_domain
  = s.attribute :name
  = s.attribute :twitter_username
  = s.attribute :facebook_page
