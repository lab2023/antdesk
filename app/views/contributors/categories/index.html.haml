= title t('tt.index', resource_name: Category.model_name.human)

- content_for :toolbar_left do
  = link_to(contributors_application_path(@application) , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left

%table.table.table-striped.table-bordered.table-condensed
  %tr
    %th
      = t('activerecord.attributes.category.name')
    %th{:width => "120px"}
  - @categories.each do |category|
    %tr
      %td
        %i{:class => "#{category.icon_name}"}
        = category.name
      %td
        = link_to(contributors_application_category_path(@application, category), class: 'btn', rel: 'tooltip', title: t('tooltips.show')) do
          %i.icon-eye-open
        = link_to(edit_contributors_application_category_path(@application, category) , class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
          %i.icon-pencil
        = link_to(contributors_application_category_path(@application, category), class: 'btn', confirm: t('confirm'), method: :delete, rel: 'tooltip', title: t('tooltips.delete')) do
          %i.icon-trash
%hr/
= will_paginate @categories